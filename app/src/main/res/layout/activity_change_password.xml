<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ChangePasswordActivity"
    android:orientation="vertical"
    android:background="@color/red_main"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp">

        <ImageView
            android:id="@+id/imv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/back"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/imv_back"
            android:text="@string/change_password"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:background="@drawable/white_round"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:src="@drawable/logo_bar_white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp">

            <EditText
                android:id="@+id/edt_current_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:padding="12dp"
                android:hint="@string/current_pass"
                android:textColorHint="@color/black"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:drawablePadding="8dp"
                android:drawableEnd="@drawable/ic_locked_password"
                android:background="@drawable/round_white"
                android:singleLine="true"
                android:inputType="textPassword"/>

            <EditText
                android:id="@+id/edt_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:hint="@string/new_pass"
                android:textColorHint="@color/black"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:drawablePadding="8dp"
                android:drawableEnd="@drawable/ic_locked_password"
                android:background="@drawable/round_white"
                android:singleLine="true"
                android:inputType="textPassword"/>


            <EditText
                android:id="@+id/edt_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:hint="@string/confirm_pass"
                android:textColorHint="@color/black"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:drawablePadding="8dp"
                android:drawableEnd="@drawable/ic_locked_password"
                android:background="@drawable/round_white"
                android:singleLine="true"
                android:inputType="textPassword"/>

            <Button
                android:id="@+id/btn_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:text="@string/update"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@drawable/round_red"
                android:shadowColor="@color/grey"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>